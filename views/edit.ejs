<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Blog-Edit</title>
  </head>
  <body>
    <div class="container" style="margin-top:6%;background-color:#1F2833;">
      <h1 style="color:white;font-size:3rem;text-align:center;">Edit</h1>
      <form action="/edit/<%=data.slug%>" method="post" style="padding:5% 5% 5% 5%">
        <div class="form-group">
          <label for="exampleFormControlTextarea1" style="color:white;">Title</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Title" name="title" rows="1"><%=data.title%></textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1" style="color:white;">Category</label>
          <select class="form-control" id="exampleFormControlSelect1" name="category">
            <%for(var i=0;i<categories.length;i++){%>
              <%if(data.category===categories[i].title){%>
                 <option selected><%=categories[i].title%></option>
              <%}else{%>
                <option ><%=categories[i].title%></option>
              <%}%>
            <%}%>
          </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1" style="color:white;">Image URL</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="imgurl" placeholder="Image URL" value="<%=data.imgurl%>" required>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1" style="color:white;">Image Info</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="imgtext" placeholder="Image Info" value="<%=data.imgtext%>" required>
          </div>
          <%if(admin===true){%>
          <div class="form-group">
            <label for="exampleFormControlSelect1" style="color:white;">Approve</label>
            <select class="form-control" id="exampleFormControlSelect1" name="approve">
              <%if(data.approved===true){%>
                <option selected>true</option>
                <option>false</option>
              <%}%>
              <%if(data.approved===false){%>
                <option>true</option>
                <option selected>false</option>
              <%}%>
            </select>
          </div>
        <%}%>
        <div class="form-group">
          <label for="exampleFormControlTextarea1" style="color:white;">Body</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Body" name="body" rows="3"><%=data.body%></textarea>
        </div>
        <%if(admin===true){%>
        <div class="form-group">
          <label for="exampleFormControlSelect1" style="color:white;">Date</label>
          <input type="datetime" class="form-control" id="formGroupExampleInput" name="date" placeholder="date" value="<%=data.date%>" >
        </div>
        <%}else{%>
        <div class="form-group">
            <label for="exampleFormControlSelect1" style="color:white;">Date</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="date" placeholder="date" value="<%=data.date%>" readonly>
        </div>
        <%}%>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <!-- Option 2: jQuery, Popper.js, and Bootstrap JS
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    -->
  </body>
</html>
