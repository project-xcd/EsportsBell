<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="#">
    <title>Blog-Article</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="/css/article/stylesheet.css" rel="stylesheet" >

</head>
<body>
<nav class="navbar navbar-expand-md fixed-top navbar-dark" id="navcontainer">
    <a class="navbar-brand" href="/"><img id="nav-logo" src="/images/logo1.png"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon" ></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto" id="nav-content">
            <%for(var i=0;i<categories.length;i++){%>
                <li class="nav-item">
                    <a class="nav-link" id="navlink" href="/categories/<%=categories[i].title%>"><%=categories[i].title%> </a>
                </li>
            <%}%>
        </ul>
        <%if(auth===true){%>
          <ul class="navbar-nav ml-auto" id="nav-content">
            <li class="nav-item">
                <a class="nav-link" id="navlink" href="/compose">Write a Post</a>
            </li>
            <%if(userInfo.admin===true){%>
              <li class="nav-item">
                  <a class="nav-link" id="navlink" href="/admin">Admin Panel</a>
              </li>
            <%}%>
              <li class="nav-item">
                  <a class="nav-link" id="navlink" href="/profile/<%=userInfo._id%>">Hi, <%=userInfo.name%></a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" id="navlink" href="/logout">Logout</a>
              </li>
          </ul>
        <%}%>
        <%if(auth===false){%>
          <ul class="navbar-nav ml-auto" id="nav-content">
              <li class="nav-item">
                  <a class="nav-link" id="navlink" href="/login">Login</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" id="navlink" href="/register">Sign up</a>
              </li>
          </ul>
        <%}%>
    </div>
</nav>

<div id="maincontainer">

    <div class="middlecontainer">
        <h1 id="page-title"><%= data.title%></h1>
        <div id="post-tags"><p id="p-tag"><span style="font-weight: 700;"><%= data.category%></span></p><p id="p-tag"><%=data.dateformat%></p><p id="p-tag"><a href="/profile/<%=data.authorid%>"><%= data.author%></a></p></div>
        <%if(auth===true && (userInfo.admin===true || userId===data.authorid)){%>
          <div>
            <a href="/edit/<%=data.slug%>"><button type="button" class="btn btn-warning">Edit</button></a>
            <a href="/delete/<%=data.slug%>"><button type="button" class="btn btn-danger">Delete</button></a>
          </div>
        <%}%>
        <div id="post-image">
            <div id="p-image"><a href="#"><img id="image" src="<%=data.imgurl%>"></a></div>
        </div>
        <div id="image-cred"><p id="image-tag">Image-</p><p id="image-tag"><%=data.imgtext%></p></div>
        <div id="post-text">
            <%- data.body%>
        </div>
    </div>

</div>
<div class="container">
  <div id="disqus_thread"></div>
    <script>
      var disqus_config = function () {
      this.page.url = "http://localhost:3000/articles/"+data.slug;  // Replace PAGE_URL with your page's canonical URL variable
      this.page.identifier = data.slug; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
      };
      (function() { // DON'T EDIT BELOW THIS LINE
      var d = document, s = d.createElement('script');
      s.src = 'https://e-sports-bell.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
      })();
  </script>
</div>

